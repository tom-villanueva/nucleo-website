---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  nombre: string;
  especialidad: string;
}

const { image, nombre, especialidad } = Astro.props;
---

<div class="flex flex-col items-center justify-center md:basis-1/4">
  <Image src={image} class="h-auto" alt="manifiesto nucleo" loading={"eager"} />
  <p class="text-7xl font-bold text-azul">{nombre}</p>
  <p class="text-center text-4xl text-azul">{especialidad}</p>
</div>
